
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GİRİŞ SAYFASI</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/Theme/AdminPanel/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Theme/AdminPanel/dist/css/adminlte.min.css">
    <style>
        body {
            background-image: url('/İmages/AkraPlanR.jpg');
            background-size: cover; /* Resmi ekran boyutuna sığacak şekilde ayarlar */
            background-repeat: no-repeat; /* Tekrar etmemesini sağlar */
            /*           color: forestgreen;
            font-family: 'Source Sans Pro', sans-serif;*/
        }

        .login-box {
            margin: 0 auto;
            max-width: 400px;
        }

        .card-outline.card-primary {
            border-color: forestgreen;
        }

        .card-header {
            background-color: forestgreen;
            color: firebrick;
            text-align: center;
            font-weight: bold;
        }

        .input-group-text {
            background-color: forestgreen;
            border-color: forestgreen;
            color: firebrick;
        }

        .btn-primary {
            background-color: forestgreen;
            border-color: forestgreen;
            color: #f0f0f0;
        }

            .btn-primary:hover {
                background-color: forestgreen;
                border-color: forestgreen;
            }

        .form-control {
            border-color: forestgreen;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-success">
            @if (ViewBag.Message != null)
            {
                <p class="login-box-msg">@ViewBag.Message</p>
            }
            <div class="card-header text-center">
                <a href="#" class="h1"><b>KÖÇER</b> ECZANESİ</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Kullanıcı Giriş</p>

                <form action="@Url.Action("Login", "Account")" method="post">
                    <div class="input-group mb-3">
                        @Html.TextBox("kullaniciAd", null, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.Password("sifre", null, new { @class = "form-control", placeholder = "Şifre" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-14">
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </div>
                </form>
                <!-- /.social-auth-links -->
                <!--<p class="mb-0" style="text-align: right;">-->
                @*<a href="@Url.Action("SifreSifirla", "Login")">Şifremi Unuttum</a>*@
                <!--</p>-->
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/Theme/AdminPanel/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Theme/AdminPanel/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Theme/AdminPanel/dist/js/adminlte.min.js"></script>
</body>
</html>
