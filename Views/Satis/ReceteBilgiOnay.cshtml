@model EczaneDEMOo.Models.SatisReceteSatisViewModel

@{
    ViewBag.Title = "Recete Bilgi Onay";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<h2>   Reçete Bilgisi ve Onay</h2>

@using (Html.BeginForm("Onayla", "Satis", FormMethod.Post))
{
    <style>
        .content-wrapper {
            padding-left: 20px; /* İhtiyacınıza göre bu değeri ayarlayın */
        }
    </style>

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ReceteNo)
    @Html.HiddenFor(model => model.ReceteID)
    @Html.HiddenFor(model => model.IlacID)
    @Html.HiddenFor(model => model.Adet)
    @Html.HiddenFor(model => model.Fiyat)

    <div class="form-group">
        <label>   Reçete No</label>
        <p>   @Model.ReceteNo</p>
    </div>

    <div class="form-group">
        <label>   İlacın Numarası</label>
        <p>   @Model.IlacID</p>
    </div>

    <div class="form-group">
        <label>   Adet</label>
        <p>   @Model.Adet</p>
    </div>

    <div class="form-group">
        <label>   Fiyat</label>
        <p>   @Model.Fiyat</p>
    </div>

    <button type="submit" class="btn btn-primary">   Satışı Onayla</button>
}
