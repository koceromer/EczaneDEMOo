@model EczaneDEMOo.Models.Entities.Satis

@{
    ViewBag.Title = "Reçetesiz İlaç Satış";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Satış</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ilacID, "ilaç Adı", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ilacID", (SelectList)ViewData["Ilac"], htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ilacID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.miktar, "İlaç Miktarı",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.miktar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.miktar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sat" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Listeye Geri Dön</a>
</div>
