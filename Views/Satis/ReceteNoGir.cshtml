
@{
    ViewBag.Title = "ReceteNoGir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@{
    ViewBag.Title = "Reçete İle Satış";
}

<h2>Reçete Numarası Girme </h2>

@using (Html.BeginForm("ReceteNoGir", "Satis", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.Label("Reçete Numarası Gir")
        @Html.TextBox("receteNo", null, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Devam Et</button>
}

